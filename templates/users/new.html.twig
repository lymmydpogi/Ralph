{% extends 'base.html.twig' %}

{% block title %}Add Customer{% endblock %}

{% block content %}
<section class="section">
    <h2>Add Customer</h2>
    {{ form_start(form, { attr: { id: 'user_form' } }) }}
        <div class="grid grid-2 gap-lg">
            <div class="p-3 panel">
                {{ form_row(form.name) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
            </div>
            <div class="p-3 panel">
                {{ form_row(form.roles) }}
            </div>
        </div>
        <div class="actions-bottom mt-4">
            <a href="{{ path('user_index') }}" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    {{ form_end(form) }}
</section>
{% endblock %}

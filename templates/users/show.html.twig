{% extends 'base.html.twig' %}

{% block title %}Customer {{ user.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('view') }}
{% endblock %}

{% block content %}
<section class="section">
    <div class="view-container">
        <h2>Customer: {{ user.name }}</h2>
        <div class="view-field">
            <div class="view-field-label">Email</div>
            <div class="view-field-value">{{ user.email }}</div>
        </div>
        <div class="view-field">
            <div class="view-field-label">Name</div>
            <div class="view-field-value">{{ user.name }}</div>
        </div>
        <div class="view-field">
            <div class="view-field-label">Roles</div>
            <div class="view-field-value">
                {% for role in user.roles %}
                    <span class="badge">{{ role|replace({'ROLE_':''})|capitalize }}</span>
                {% endfor %}
            </div>
        </div>
        <div class="view-field">
            <div class="view-field-label">Created At</div>
            <div class="view-field-value">{{ user.createdAt ? user.createdAt|date('Y-m-d H:i') : '—' }}</div>
        </div>

        <h3 style="margin-top:1.5rem;">Customer Orders</h3>
        <table class="table table-striped table-hover table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if user.orders is not empty %}
                    {% for order in user.orders %}
                        <tr>
                            <td>#{{ order.id }}</td>
                            <td>{{ order.status|default('pending') }}</td>
                            <td>${{ order.totalPrice|default('0.00') }}</td>
                            <td>{{ order.orderDate ? order.orderDate|date('Y-m-d H:i') : '—' }}</td>
                            <td>
                                <a href="{{ path('app_order_show', {id: order.id}) }}" class="btn btn-view btn-sm">View</a>
                                <a href="{{ path('app_order_edit', {id: order.id}) }}" class="btn btn-edit btn-sm">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="5" style="text-align:center;">No orders yet.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>

        <div style="display:flex; gap:8px; margin-top:1rem;">
            <a href="{{ path('user_index') }}" class="btn btn-back">← Back</a>
            <a href="{{ path('user_edit', {id: user.id}) }}" class="btn btn-primary">Edit</a>
        </div>
    </div>
</section>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Customer {{ user.name }}{% endblock %}

{% block content %}
<section class="section">
    <h2>Customer: {{ user.name }}</h2>
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>
                    {% for role in user.roles %}
                        <span class="badge">{{ role|replace({'ROLE_':''})|capitalize }}</span>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i') : 'â€”' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="actions-bottom">
        <a href="{{ path('user_index') }}" class="btn btn-secondary">&larr; Back</a>
        <a href="{{ path('user_edit', {id: user.id}) }}" class="btn btn-primary">Edit</a>
    </div>
</section>
{% endblock %}

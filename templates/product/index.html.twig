{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('productindex') }}
{% endblock %}

{% block content %}
<section class="section">
    <h2>Products</h2>

    <div class="actions">
        <a href="{{ path('app_product_new') }}" class="btn btn-primary">+ Add New Product</a>
    </div>

    <table id="productsTable" class="table table-striped table-hover table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description ?: 'â€”' }}</td>
                    <td>${{ product.price }}</td>
                    <td>{{ product.category }}</td>
                    <td>{{ product.isActive ? 'Yes' : 'No' }}</td>
                    <td>
                        <button type="button" class="btn btn-view btn-sm" data-action="view" data-href="{{ path('app_product_view', {id: product.id}) }}">View</button>
                        <button type="button" class="btn btn-edit btn-sm" data-action="edit" data-href="{{ path('app_product_edit', {id: product.id}) }}">Edit</button>
                        <form action="{{ path('app_product_delete', {id: product.id}) }}" method="POST" class="inline-form d-inline js-delete-form">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button type="button" class="btn btn-delete btn-sm" data-action="delete">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="actions-bottom">
        <a href="{{ app.request.headers.get('referer') ?: path('app_home') }}" class="btn btn-secondary">&larr; Back</a>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('productindex') }}
{% endblock %}

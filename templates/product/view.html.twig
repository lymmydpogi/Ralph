{% extends 'base.html.twig' %}

{% block title %}Product: {{ product.name }}{% endblock %}

{% block content %}
<section class="section">
    <h2>Product: {{ product.name }}</h2>
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description ?: 'â€”' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>${{ product.price }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ product.category }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ product.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="actions-bottom">
        <a href="{{ path('app_product_index') }}" class="btn btn-secondary">&larr; Back</a>
        <a href="{{ path('app_product_edit', { id: product.id }) }}" class="btn btn-primary">Edit</a>
    </div>
</section>
{% endblock %}

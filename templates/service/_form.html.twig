{# templates/service/_form.html.twig #}

<div class="form-container">
    {{ form_start(form) }}

    {# Name field #}
    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {'attr': {'placeholder': 'Enter service name'}}) }}
        {{ form_errors(form.name) }}
    </div>

    {# Description field #}
    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'placeholder': 'Enter service description'}}) }}
        {{ form_errors(form.description) }}
    </div>

    {# Price field #}
    <div class="form-group">
        {{ form_label(form.price) }}
        {{ form_widget(form.price, {'attr': {'placeholder': 'Enter price'}}) }}
        {{ form_errors(form.price) }}
    </div>

    {# Category field #}
    <div class="form-group">
        {{ form_label(form.category) }}
        {{ form_widget(form.category, {'attr': {'placeholder': 'Enter category'}}) }}
        {{ form_errors(form.category) }}
    </div>

    {# Active checkbox #}
    <div class="form-group">
        {{ form_label(form.isActive) }}
        {{ form_widget(form.isActive) }}
        {{ form_errors(form.isActive) }}
    </div>

    {# Form action buttons #}
    <div class="form-actions">
        {% if button_label is defined %}
            <button type="submit" class="btn btn-primary">{{ button_label }}</button>
        {% else %}
            <button type="submit" class="btn btn-primary">Save</button>
        {% endif %}

        <a href="{{ path('app_service_index') }}" class="btn btn-secondary">Back to List</a>
    </div>

    {{ form_end(form) }}
</div>

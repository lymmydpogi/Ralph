{% extends 'base.html.twig' %}

{% block title %}Add New Service{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('servicenew') }}
{% endblock %}

{% block content %}
<div class="form-container">
    <h2>Add New Service</h2>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {'attr': {'placeholder': 'Enter service name'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'placeholder': 'Describe the service'}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="form-group">
        {{ form_label(form.price) }}
        {{ form_widget(form.price, {'attr': {'placeholder': 'Set the price'}}) }}
        {{ form_errors(form.price) }}
    </div>

    <div class="form-group">
        {{ form_label(form.category) }}
        {{ form_widget(form.category, {'attr': {'placeholder': 'Enter category'}}) }}
        {{ form_errors(form.category) }}
    </div>

    <div class="form-group">
        {{ form_label(form.isActive) }}
        {{ form_widget(form.isActive) }}
        {{ form_errors(form.isActive) }}
    </div>

    <div class="actions">
        <a href="{{ path('app_service_index') }}" class="btn btn-cancel">Cancel</a>
        <button type="submit" class="btn btn-primary">Save Service</button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('servicenew') }}
{% endblock %}

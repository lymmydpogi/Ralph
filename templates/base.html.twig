<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Shoes Admin{% endblock %}</title>

    {# Default global styles from Webpack Encore #}
    {{ encore_entry_link_tags('dashboard') }}

    {# Page-specific stylesheets (like dashboard.css, home.css, etc.) #}
    {% block stylesheets %}{% endblock %}
</head>

<body>
    <div class="sidebar">
        <div class="sidebar-header">
        
            <h1>Shoes Admin</h1>
            <p>Management Panel</p>
        </div>

        <nav class="sidebar-nav">
            <a href="{{ path('app_home') }}" class="{% if app.request.get('_route') == 'app_home' %}active{% endif %}">🏠 Dashboard</a>
            <a href="{{ path('user_index') }}" class="{% if app.request.get('_route') starts with 'user_' %}active{% endif %}">👥 Customers</a>
            <a href="{{ path('app_order_index') }}" class="{% if app.request.get('_route') starts with 'app_order_' %}active{% endif %}">🧾 Orders</a>
            <a href="{{ path('app_service_index') }}" class="{% if app.request.get('_route') starts with 'app_service_' %}active{% endif %}">🛠️ Services</a>
            <a href="{{ path('app_product_index') }}" class="{% if app.request.get('_route') starts with 'app_product_' %}active{% endif %}">👟 Products</a>
        </nav>
    </div>

    <div class="main">
        <header class="navbar">
            <h2>{% block page_title %}Dashboard{% endblock %}</h2>
            <div class="navbar-actions">
                <div class="user-profile">
                    <div class="user-avatar">{{ app.user ? app.user.name|first|upper : 'A' }}</div>
                    <span>{{ app.user ? app.user.name : 'Admin' }}</span>
                </div>
            </div>
        </header>

        <main class="content">
            <div class="container">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}" role="alert" style="margin-bottom:12px;">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
                {% block content %}{% endblock %}
            </div>
        </main>
    </div>

    {# Default global JS bundle from Encore #}
    {{ encore_entry_script_tags('dashboard') }}

    {# Page-specific JS (like home.js or usersindex.js) #}
    {% block javascripts %}{% endblock %}
</body>
</html>

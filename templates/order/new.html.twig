{% extends 'base.html.twig' %}

{% block title %}Create New Order{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('ordersform') }}
{% endblock %}

{% block content %}
<section class="section">
    <h2>Create New Order</h2>

    {{ form_start(form, { attr: { id: 'order_form' } }) }}
        {{ form_errors(form) }}
        <div class="grid grid-2 gap-lg">
            <div class="p-3 panel">
                <h3 class="mb-3">Customer</h3>
                {{ form_row(form.customer) }}
            </div>

            <div class="p-3 panel">
                <h3 class="mb-3">Order Details</h3>
                {{ form_row(form.orderDate) }}

                <hr class="mb-3 mt-3" />
                <h4 class="mb-2">Items</h4>
                {{ form_errors(form.orderItems) }}
                <table class="table table-striped table-hover table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Service</th>
                        </tr>
                    </thead>
                    <tbody id="order-items-body"
                           data-prototype="{{ form_row(form.orderItems.vars.prototype)|e('html_attr') }}"
                           data-index="{{ form.orderItems|length }}">
                        {% for itemForm in form.orderItems %}
                            <tr class="order-item-row">
                                <td>{{ form_widget(itemForm.product) }}</td>
                                <td>{{ form_widget(itemForm.service) }}</td>
                                {# Show row-level errors if any #}
                                {% if form_errors(itemForm) %}
                                    <td colspan="2">
                                        <div class="text-danger" style="font-size:12px;">{{ form_errors(itemForm) }}</div>
                                    </td>
                                {% endif %}
                                {# Hidden fields to carry data if needed #}
                                <td style="display:none;">{{ form_widget(itemForm.name) }}</td>
                                <td style="display:none;">{{ form_widget(itemForm.price) }}</td>
                                <td style="display:none;">{{ form_widget(itemForm.quantity) }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <div class="mt-3">
                    {{ form_row(form.totalPrice) }}
                    {{ form_row(form.status) }}
                </div>

                <div class="actions-bottom mt-2">
                    <button type="button" class="btn btn-primary" id="add-order-item">+ Add Item</button>
                </div>
            </div>
        </div>

        <div class="actions-bottom mt-4">
            <a href="{{ path('app_order_index') }}" class="btn btn-secondary"> Back to List</a>
            <button type="submit" id="save-order" class="btn btn-primary"> Save Order</button>
        </div>
    {{ form_end(form) }}
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('ordersform') }}
{% endblock %}

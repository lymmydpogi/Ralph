{% extends 'base.html.twig' %}

{% block title %}Orders{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('orderindex') }}
{% endblock %}

{% block content %}
    <section class="section">
    <h2 class="mb-4">Orders</h2>

    {# Removed top add button to keep only the bottom action #}

    <table id="ordersTable" class="table table-striped table-hover table-bordered display nowrap" style="width:100%">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Total</th>
                <th>Status</th>
                <th>Order Date</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.customer ? order.customer.name : 'N/A' }}</td>
                    <td>${{ order.totalPrice|default('0.00') }}</td>
                    <td>{{ order.status|default('pending') }}</td>
                    <td>{{ order.orderDate ? order.orderDate|date('Y-m-d H:i') : 'N/A' }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_order_show', {id: order.id}) }}" class="btn btn-view btn-sm">View</a>
                        <a href="{{ path('app_order_edit', {id: order.id}) }}" class="btn btn-edit btn-sm">Edit</a>
                        <form action="{{ path('app_order_delete', {id: order.id}) }}" method="POST" class="inline-form d-inline" onsubmit="return confirm('Are you sure you want to delete this order?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                            <button type="submit" class="btn btn-delete btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="actions-bottom">
        <a href="{{ app.request.headers.get('referer') ?: path('app_home') }}" class="btn btn-secondary">
            &larr; Back
        </a>
        <a href="{{ path('app_order_new') }}" class="btn btn-primary">+ Add New Order</a>
    </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('orderindex') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Edit Order{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Include compiled CSS via Webpack Encore for the Edit Order page #}
    {{ encore_entry_link_tags('orderedit') }}
{% endblock %}

{% block content %}
<section class="section">
    <h2>Edit Order</h2>

    {{ form_start(form, { attr: { id: 'order_form' } }) }}
        <div class="grid grid-2 gap-lg">
            <div class="p-3 panel">
                <h3 class="mb-3">Customer</h3>
                {{ form_row(form.customer) }}
            </div>

            <div class="p-3 panel">
                <h3 class="mb-3">Order Details</h3>
                {{ form_row(form.orderDate) }}
                {{ form_row(form.totalPrice) }}
                {{ form_row(form.status) }}
            </div>
        </div>

        <div class="actions-bottom mt-4">
            <a href="{{ path('app_order_index') }}" class="btn btn-secondary">&larr; Back to list</a>
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    {{ form_end(form) }}

    {{ include('order/_delete_form.html.twig') }}
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Include compiled JS via Webpack Encore for the Edit Order page #}
    {{ encore_entry_script_tags('orderedit') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Order {{ order.id }}{% endblock %}

{% block content %}
<section class="section">
    <h2>Order #{{ order.id }}</h2>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Customer</th>
                <td>{{ order.customer ? order.customer.name : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Total Price</th>
                <td>${{ order.totalPrice|default('0.00') }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status|default('pending') }}</td>
            </tr>
            <tr>
                <th>Order Date</th>
                <td>{{ order.orderDate ? order.orderDate|date('Y-m-d H:i') : 'N/A' }}</td>
            </tr>
            <tr>
                <th>Items</th>
                <td>{{ order.orderItems|length }}</td>
            </tr>
        </tbody>
    </table>

    <div class="actions-bottom">
        <a href="{{ path('app_order_index') }}" class="btn btn-secondary">&larr; Back</a>
        <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn btn-primary">Edit</a>
        {{ include('order/_delete_form.html.twig') }}
    </div>
</section>
{% endblock %}
